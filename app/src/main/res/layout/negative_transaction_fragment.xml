<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="10dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/negative_gradient"
        android:elevation="5dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iVNegativeTransactionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dollar_icon" />

        <TextView
            android:id="@+id/tvNegativeTransactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:layout_toEndOf="@id/iVNegativeTransactionIcon"
            android:fontFamily="@font/amiko_bold"
            android:text="48284.32"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvNegativeTransactionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="12/12/2020"
            android:textColor="#FFF"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tvNegativeTransactionDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNegativeTransactionAmount"
            android:layout_alignStart="@id/tvNegativeTransactionAmount"
            android:ellipsize="end"
            android:fontFamily="@font/amiko_bold"
            android:maxLines="1"
            android:text="Description"
            android:textColor="#FFF"
            android:textSize="17sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>