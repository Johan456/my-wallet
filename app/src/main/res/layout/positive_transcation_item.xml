<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:elevation="10dp"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/positive_gradient"
        android:elevation="5dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iVPositiveTransactionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dollar_icon" />

        <TextView
            android:id="@+id/tvPositiveTransactionAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2sp"
            android:layout_toEndOf="@id/iVPositiveTransactionIcon"
            android:fontFamily="@font/amiko_bold"
            android:text="484.32"
            android:textColor="#FFF"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvPositiveTransactionDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/tvPositiveTransactionDescription"
            android:text="12/12/2020"
            android:textColor="#FFF"
            android:layout_marginEnd="10dp"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvPositiveTransactionDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPositiveTransactionAmount"
            android:layout_alignStart="@id/tvPositiveTransactionAmount"
            android:ellipsize="end"
            android:fontFamily="@font/amiko_bold"
            android:maxLines="1"
            android:textSize="17sp"
            android:text="@string/description"
            android:textColor="#FFF" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>